<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultHolter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#802B2A2A"
        android:gravity="end|center_vertical"
        android:maxLines="2"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#303030"
        android:id="@+id/linhaDivisor"
        android:layout_below="@+id/resultHolter"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_below="@+id/linhaDivisor"
        android:layout_above="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:background="#aaa"
        >
        <TextView
            android:id="@+id/expression"
            android:hint="0"
            android:textColorHint="#000000"
            android:gravity="end|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#3C3C3C"
            android:maxLines="1"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cBtn"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="C"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/raizBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="√"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/modulusBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="%"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisionBtn"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="1dp"
                android:text="÷"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:textSize="30sp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sevenBtn"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eightBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nineBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicationBtn"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="1dp"
                android:text="×"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourBtn"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fiveBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sixBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/substrationBtn"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="1dp"
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oneBtn"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/twoBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/additionBtn"
                android:background="@drawable/ripple_effect_purple"
                android:textColor="@color/white"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="1dp"
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="1dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dotBtn"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="."
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zeroBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delBtn"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/ripple_effect_black"
                android:textColor="@color/white"
                android:text="Del"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/egualsBtn"
                android:background="@drawable/ripple_effect_yellow"
                android:textColor="@color/white"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="1dp"
                android:text="="
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:textSize="30sp"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>